@model GaiaDbContext.Models.SystemModels.NewsInfoModel

@{
    ViewBag.Title = "title";
    Layout = "_LayoutAdmin";
}


<script type="text/javascript" charset="utf-8" src="~/lib/ueditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="~/lib/ueditor/ueditor.all.min.js"></script>
<script type="text/javascript" charset="utf-8" src="~/lib/ueditor/lang/zh-cn/zh-cn.js"></script>





<a href="/Admin/NewsIndex">返回列表</a>
<form asp-controller="Admin" asp-action="NewsUpdate" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h4>编辑新闻.</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-10">
            @*            <input asp-for="Id" class="form-control" type="hidden"/>*@
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="name">标题</label>
        <div class="col-md-10">
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="type">类型</label>

        <div class="col-md-10">

            <select class="btn dropdown-toggle form-control" id="type" name="type" style="width: 100px">
                <option value="">--类型--</option>
                <option value="1">首页</option>
                <option value="2">帮助</option>
                <option value="3">新闻</option>
            </select>
            
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="state">状态</label>

        <div class="col-md-10">
            <input asp-for="state" class="form-control" />
            <span asp-validation-for="state" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label" for="state">排序（显示顺序从小到大）</label>

        <div class="col-md-10">
            <input asp-for="Rank" class="form-control" />
            <span asp-validation-for="Rank" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="contents">内容</label>

        <div class="col-md-10">
            <script id="contents" name="contents" type="text/plain" style="height:500px;">
            </script>
            @*            <input asp-for="contents" class="form-control" />*@
            @*            <span asp-validation-for="contents" class="text-danger"></span>*@
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">保存</button>
        </div>
    </div>
</form>


<script type="text/javascript">

    //实例化编辑器
    //建议使用工厂方法getEditor创建和引用编辑器实例，如果在某个闭包下引用该编辑器，直接调用UE.getEditor('editor')就能拿到相关的实例
    var ue = UE.getEditor('contents');


</script>


@if (Model!=null && !string.IsNullOrEmpty(Model.contents))
{
    <script>
        $(function() {
            $("#type").val(@Model.type);
        });

        ue.ready(function () {//编辑器初始化完成再赋值
            {

                ue.setContent('@Html.Raw(Model.contents.Replace("\r","").Replace("\n",""))');  //赋值给UEditor
            }
        });
    </script>
}
