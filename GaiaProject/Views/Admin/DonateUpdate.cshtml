@model GaiaDbContext.Models.SystemModels.DonateRecordModel

@{
    ViewBag.Title = "title";
    Layout = "_LayoutAdmin";
}


<form class="form-horizontal group-border" role="form" asp-controller="Admin" asp-action="DonateUpdate" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" id="formdata">


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2><i class="fa fa-indent red"></i><strong>编辑捐赠</strong></h2>
                    <a href="/Admin/DonateIndex">返回列表</a>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">捐赠人ID</label>
                        <div class="col-lg-10 col-md-10">
                            <input asp-for="donateuser" class="form-control" />
                            <span asp-validation-for="donateuser" class="text-danger"></span>
                        </div>
                    </div>
                    <hr>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">捐赠方式</label>
                        <div class="col-lg-10 col-md-10">
                            <select class="btn dropdown-toggle form-control" id="donatetype" name="donatetype" style="width: 100px">
                                <option value="">--捐赠方式--</option>
                                <option value="微信">微信</option>
                                <option value="支付宝">支付宝</option>
                                <option value="QQ">QQ</option>
                                <option value="其他">其他</option>

                            </select>
                        </div>
                    </div>
                    <hr>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">捐赠金额</label>
                        <div class="col-lg-10 col-md-10">
                            <input asp-for="donateprice" class="form-control" />
                            <span asp-validation-for="donateprice" class="text-danger"></span>
                        </div>
                    </div>
                    <hr>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">捐赠时间</label>
                        <div class="col-lg-10 col-md-10">
                            <input asp-for="donatetime" class="form-control" />
                            <span asp-validation-for="donatetime" class="text-danger"></span>
                        </div>
                    </div>
                    <hr>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">收款人</label>
                        <div class="col-lg-10 col-md-10">
                            <input asp-for="chequeuser" class="form-control" />
                            <span asp-validation-for="chequeuser" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">货币单位</label>
                        <div class="col-lg-10 col-md-10">
                            <input asp-for="moneytype" class="form-control" value="人民币"/>
                            <span asp-validation-for="moneytype" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">信息新闻ID</label>
                        <div class="col-lg-10 col-md-10">
                            <input asp-for="newid" class="form-control"/>
                            <span asp-validation-for="newid" class="text-danger"></span>
                        </div>
                    </div>


                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-dot-circle-o"></i> 保存</button>
                </div>
            </div>
        </div><!--.col-->
    </div>

</form>


@if (Model != null)
{
    <script>
        $(function() {
            $("#donatetype").val('@Html.Raw(Model.donatetype)');
        });
    </script>
}

