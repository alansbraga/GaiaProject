@using GaiaDbContext.Models.SystemModels
@model List<GaiaDbContext.Models.SystemModels.NewsInfoModel>

@{
    ViewBag.Title = "title";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h4 class="title">新闻列表</h4>
                    <a  href="/Admin/NewsUpdate">添加新闻</a>
@*                    <p class="category">Here is a subtitle for this table</p>*@
                </div>
                <div class="content table-responsive table-full-width">
                    <table class="table table-hover table-striped">
                        <thead>
                        <tr><th>ID</th>
                            <th>标题</th>
                            <th>类型</th>
                            <th>发布时间</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr></thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.name</td>
                                <td>@item.type</td>
                                <td>@item.AddTime</td>
                                <td>@item.state</td>
                                <td>
                                    <a href="/Admin/NewsUpdate/@item.Id">编辑</a>
                                </td>

                            </tr>
                        }

                        
                        </tbody>
                    </table>

                </div>
            </div>
        </div>




    </div>
</div>
