@using GaiaDbContext.Models
@using GaiaDbContext.Models.HomeViewModels
@inject UserManager<ApplicationUser> UserManager

@model List<GaiaDbContext.Models.HomeViewModels.GameInfoModel>
@{
    //ViewBag.Title = "结束游戏";
    Layout = "_Layout";
}
@{
    bool isAdmin = UserManager.GetUserAsync(User).Result != null && UserManager.GetUserAsync(User).Result.groupid == 1;
    string usernmae = UserManager.GetUserAsync(User).Result?.UserName;
    string adminType = this.Context.Request.Query["isAdmin"];
}

@if (isAdmin)
{
    <div>
        <span>菜单仅管理员可见</span>
        <a href="/GameInfo/UpdatenFinishFromDb">检测游戏结束但没有种族信息的</a>
        <a href="/GameInfo/UpdatenNoFromDb">检测游戏应该结束但没有更新的</a>

        <a href="/GameInfo/DeleteGameInvalid">删除未结束但内存没有的游戏</a>
        <a href="/GameInfo/UpdateGame">将内存的游戏重新保存到数据库</a>
    </div>

}


<form>
    <div class="row">
        <div class="col-lg-8">
            <div class="input-group">
                <input type="text" class="form-control" style="width: 100px" placeholder="回合" id="round" name="round">
                <input type="text" class="form-control" style="width: 200px" placeholder="创建人" id="username" name="username">
                <input type="text" class="form-control" style="width: 200px" placeholder="参与人" id="joinname" name="joinname">
                @if (adminType == "1")
                {
                    <input type="text" class="form-control" style="width: 100px" placeholder="最低分" id="scoremin" name="scoremin">
                }
                <input type="hidden" class="form-control" value="@adminType" placeholder="管理员" id="isAdmin" name="isAdmin">

                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">搜索</button>
                </span>
            </div>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <td>游戏名称</td>
            <td>人数</td>
            @*<td>FSTList</td>*@
            <td>得分</td>
            <td>回合</td>

            <td>创建人/创建时间/结束时间</td>

            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/Home/RestoreGame/@item.Id">@item.name</a>
                </td>
                <td>@item.UserCount</td>
                @*<td>@item.FSTList</td>*@

                <td>@item.scoreFaction</td>
                <td>@item.round</td>

                <td>@item.username/@item.starttime.ToString("yyyy-MM-dd")/@item.endtime?.ToString("yyyy-MM-dd")</td>

                <td>
                    @if (isAdmin || item.username == usernmae)
                    {
                        <button class="btn btn-default del" id="@item.Id">删除</button>
                    }
                </td>
            </tr>

        }

    </tbody>
</table>


@Html.Partial("Partial_PageInfo", Model)


<script>
    $(".del").click(function () {
        var id = this.id;
        var button = $(this);
        if (confirm('删除后不可恢复，是否删除?')) {
            $.post("/GameInfo/DelGame/" + id, "", function (data) {
                if (data.info.state === 200) {
                    button.parent().parent().remove();
                }
            });
        }

    })
</script>