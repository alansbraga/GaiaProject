@model GaiaCore.Gaia.GaiaGame
<!-- 模态框（Modal）升级建筑 -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    选择要升级的建筑
                </h4>
            </div>
            <div class="modal-body">
                <select class="btn dropdown-toggle form-control" id="updateBuildList"></select>
                <div id="sttBody">
                    @Html.DropDownList("enumList", new SelectList(Model.STT6List.GroupBy(a => a.name).Select(g => new { count = g.Count(), desc = g.Max(item => item.desc), name = g.Max(item => item.name) }), "name", "desc"), "--请选择科技板块(6)--", new { @class = "btn dropdown-toggle form-control updatettlist", @id = "stt6List", @syntax = ".+" })
                    <div class="form-inline">
                        @Html.DropDownList("enumList", new SelectList(Model.STT3List.GroupBy(a => a.name).Select(g => new { count = g.Count(), desc = g.Max(item => item.desc), name = g.Max(item => item.name) }), "name", "desc"), "--请选择科技板块(3)--", new { @class = "btn dropdown-toggle form-control updatettlist", @id = "stt3List", @syntax = ".+" })
                        <select class="btn dropdown-toggle form-control" id="updatekj" name="enumList" syntax=".+">
                            <option value="">--请选择升级科技--</option>
                            <option value="tf">地形改造</option>
                            <option value="ship">航行</option>
                            <option value="ai">人工智能</option>
                            <option value="gaia">盖亚计划</option>
                            <option value="eco">经济</option>
                            <option value="sci">科学</option>
                        </select>

                    </div>
                    <div class="form-inline">
                        @Html.DropDownList("enumList", new SelectList(Model.ATTList, "name", "desc"), "--请选择高级科技--", new { @class = "btn dropdown-toggle form-control updatettlist", @id = "attList", @syntax = ".+" })
                        @Html.DropDownList("enumList", new SelectList(Model.FactionList[Model.GameStatus.PlayerIndex].GameTileList.FindAll(a => a.typename == "stt"), "name", "desc"), "--请选择被覆盖科技--", new { @class = "btn dropdown-toggle form-control ", @id = "fg_sttList", @syntax = ".+" })

                    </div>

                </div>

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-primary" id="updateQuery">
                    确定
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
